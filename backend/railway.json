{
    "$schema": "https://railway.com/railway.schema.json",
    "build": {
        "builder": "NIXPACKS",
        "buildCommand": "python manage.py migrate"
    },
    "deploy": {
        "startCommand": "gunicorn core.wsgi:application --bind 0.0.0.0:$PORT",
        "restartPolicyType": "ON_FAILURE",
        "healthcheckPath": "/api/health/"
    }
}